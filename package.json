{
  "name": "nextapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "compile:contracts": "npx hardhat compile",
    "deploy:base": "node ./scripts/clean-artifacts.mjs && npx hardhat run ./scripts/deploy.mjs --network base",
    "deploy:base:sepolia": "node ./scripts/clean-artifacts.mjs && npx hardhat run ./scripts/deploy.mjs --network baseSepolia",
  "deploy:v2:base": "node ./scripts/clean-artifacts.mjs && CONTRACT_NAME=CoinFlipBettingV2 npx hardhat run ./scripts/deploy.mjs --network base -- --contract=CoinFlipBettingV2",
  "deploy:v2:base:sepolia": "node ./scripts/clean-artifacts.mjs && CONTRACT_NAME=CoinFlipBettingV2 npx hardhat run ./scripts/deploy.mjs --network baseSepolia -- --contract=CoinFlipBettingV2",
    "artifacts:clean": "node ./scripts/clean-artifacts.mjs"
  },
  "dependencies": {
    "ethers": "^6.14.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "thirdweb": "^5.108.8",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "typescript": "^5"
  },
  "devDependencies": {
    "@thirdweb-dev/contracts": "^3.15.0",
    "@nomicfoundation/hardhat-ethers": "^4.0.1",
    "dotenv": "^17.2.3",
    "hardhat": "^3.0.6",
    "solc": "^0.8.30"
  },
  "type": "module"
}